{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting": "Information",
      "Microsoft.AspNetCore.Routing": "Information"
    }
  },
  "AllowedHosts": "*",
  "EmailSettings": {
    "SmtpServer": "smtp.office365.com",
    "SmtpPort": 587,
    "Username": "your-corporate-email@company.com",
    "Password": "YOUR_APP_PASSWORD_HERE",
    "FromEmail": "your-corporate-email@company.com",
    "ToEmail": "your-corporate-email@company.com",
    "EnableSsl": true,
    "UseDefaultCredentials": false,
    "DeliveryMethod": "Network",
    "Timeout": 30000
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=your-server;Database=MyRoofDB;Trusted_Connection=true;MultipleActiveResultSets=true"
  }
}
